{
	"manifest_version": 3,
	"name": "Chrome Extension Template",
	"version": "1.0.0",
	"description": "A template for building Chrome extensions.",
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"side_panel": {
		"default_path": "index.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentscript.js"],
            "run_at": "document_end"
		}
	],
	"permissions": [
		"storage",
		"activeTab",
		"tabs",
		"sidePanel",
		"userScripts",
		"scripting",
		"contextMenus"
	],
	"host_permissions": ["http://*/*", "https://*/*"]
}
